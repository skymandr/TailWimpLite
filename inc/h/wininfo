#ifndef TAILWIMP_WININFO
#define TAILWIMP_WININFO

#include "oslib/wimp.h"

// Window info struct:
typedef struct wininfo wininfo;
struct wininfo {
    osbool is_left;
    osbool is_right;
    osbool is_top;
    osbool is_bottom;
    osbool has_headrow;
    osbool has_hscroll;
    osbool has_vscroll;
    int width_current;
    int height_current;
    int width_full;
    int height_full;
};

// Funtion prototypes:
// TODO: should not be state
void wininfo_get_active_window(wimp_window_state* state);
wininfo wininfo_get_info(wimp_window_info* info);

#endif
