#ifndef TAILWIMP_WIN
#define TAILWIMP_WIN

#include "oslib/wimp.h"


// Movement directions:
typedef int direction;
#define manage_OFF      -1
#define manage_CENTRE    0
#define manage_LEFT      1
#define manage_RIGHT     2
#define manage_TOP       3
#define manage_BOTTOM    4

// Manage windows:
void manage_window(wimp_w handle, direction dir);

