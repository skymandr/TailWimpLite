#include "oslib/osspriteop.h"
#include "oslib/wimp.h"

#include "appwin.h"
#include "ibar.h"
#include "control.h"
#include "menu.h"
#include "report.h"
#include "resources.h"
#include "screen.h"
#include "sfconfig.h"
#include "tailwimp.h"


// Global variables:
osbool          main_quit_flag = FALSE;
wimp_w          app_handle;
choices         app_choices;
screen_padding  app_padding;


// Function prototypes:
static wimp_t main_init(void);
static void main_poll(void);
static void main_exit(wimp_t task);
static void main_user_message(wimp_message* message);
static void main_quit_loop(void);
static void main_mouse_click(wimp_pointer* pointer);


// Main code entrypoint;
int main() {
    wimp_t task;

    task = main_init();
    main_poll();
    main_exit(task);

    return 0;
}


// Global application initialisation:
static wimp_t main_init(void) {
    wimp_t              task;
    os_error*           error;
    osspriteop_area*    sprites;

    // Initialise application:
    if (!choices_init()) {
        report_error("Could not initialise Choices");
        main_exit(0);
    }
    choices_get(&app_choices, &app_padding);
    task = wimp_initialise(
        wimp_VERSION_RO3,
        APP_TITLE,
        NULL,
        NULL
    );
    
    // Load application sprites:
    sprites = resources_load_user_sprite_area(APP_DIR ".Themes.Sprites");
    if (sprites == NULL) {
        report_error("Failed to load application Sprites");
        main_exit(task);
    }

    // Open templates files:
    error = xwimp_open_template(APP_DIR ".Templates");
    if (error != NULL) {
        report_os_error(error);
        main_exit(task);
    }
    
    // Initialise iconbar:
    ibar_initialise(sprites);

    // Initialise window:
    app_handle = appwin_initialise(sprites);
    appwin_open(app_handle);

    return task;
}


// Main wimp poll loop:
static void main_poll(void) {
    wimp_event_no   reason;
    wimp_block      block;
    int             pollword;

    while(!main_quit_flag) {
        reason = wimp_poll(
            wimp_MASK_NULL
            | wimp_MASK_ENTERING
            | wimp_MASK_LEAVING
            | wimp_MASK_GAIN
            | wimp_MASK_LOSE
            | wimp_MASK_POLLWORD,
            &block,
            &pollword
        );

        switch (reason) {
        case wimp_USER_MESSAGE:
        case wimp_USER_MESSAGE_RECORDED:
            main_user_message(&(block.message));
            break;
        case wimp_MOUSE_CLICK:
            main_mouse_click(&(block.pointer));
            break;
        case wimp_MENU_SELECTION:
            menu_process_event(&(block.selection));
            break;
        case wimp_OPEN_WINDOW_REQUEST:
            wimp_open_window(&(block.open));
            break;
        case wimp_CLOSE_WINDOW_REQUEST:
            wimp_close_window(block.close.w);
            break;
        case wimp_KEY_PRESSED:
            control_process_key(block.key.c);
            break;
        default:
            break;
        }
    }
}


// Global application termination:
static void main_exit(wimp_t task) {
    wimp_close_down(task);
} 


// Handle user message:
static void main_user_message(wimp_message* message) {
    if (message->action == message_QUIT) {
        main_quit_loop();
    } else if (message->action == message_MENUS_DELETED) {
        menu_message_menus_deleted(message);
    }
}


// Handle quit main loop:
static void main_quit_loop(void) {
    main_quit_flag = TRUE;
}


// Handle quit mouse click:
static void main_mouse_click(wimp_pointer* pointer) {
    if (pointer->w == wimp_ICON_BAR) {
        ibar_mouse_click(pointer);
    }
}
