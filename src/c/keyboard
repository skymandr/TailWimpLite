#include "oslib/wimp.h"

#include "appwin.h"
#include "manage.h"
#include "report.h"

// Process keyboard input:
void keyboard_process_key(wimp_key_no c) {
    osbool open_win = TRUE;
    // TODO: This is mostly placeholders:
    wimp_window_state state;
    wimp_w handle;
    handle = appwin_get_handle();
    state.w = handle;
    wimp_get_window_state(&state);
    state.next = wimp_TOP;

    switch (c) {
    case wimp_KEY_CONTROL | wimp_KEY_SHIFT | wimp_KEY_LEFT:
        manage_window(&state, manage_LEFT);
        break;
    case wimp_KEY_CONTROL | wimp_KEY_SHIFT | wimp_KEY_RIGHT:
        manage_window(&state, manage_RIGHT);
        break;
    case wimp_KEY_CONTROL | wimp_KEY_SHIFT | wimp_KEY_UP:
        manage_window(&state, manage_TOP);
        break;
    case wimp_KEY_CONTROL | wimp_KEY_SHIFT | wimp_KEY_DOWN:
        manage_window(&state, manage_CENTRE);
        break;
    default:
        wimp_process_key(c);
        open_win = FALSE;
        break;
    }
    if (open_win) {
        wimp_open_window((wimp_open*) &state);
    }
};
